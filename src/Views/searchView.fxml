<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.searchViewController">
    <children>
        <VBox prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="80.0" prefWidth="637.0" text="Music Api Search" textAlignment="CENTER">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
                <HBox alignment="BOTTOM_CENTER" prefHeight="20.0" prefWidth="539.0" spacing="10.0">
                    <children>
                        <Label prefHeight="28.0" prefWidth="105.0" text="Enter Artist">
                     <font>
                        <Font size="19.0" />
                     </font></Label>
                        <TextField fx:id="textField" prefHeight="26.0" prefWidth="320.0" />
                  <Button mnemonicParsing="false" onAction="#getAlbums" prefHeight="26.0" prefWidth="94.0" text="Search" />

                    </children>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <ListView fx:id="musicListView" onMouseClicked="#changeToDetailsView" prefHeight="575.0" prefWidth="540.0" />
                    </children>
                </HBox>
                <Label fx:id="rowsReturnedLabel" prefHeight="22.0" prefWidth="134.0" text="Rows Returned: ">
               <font>
                  <Font size="15.0" />
               </font></Label>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
