<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.searchViewController">
    <children>
        <VBox prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <StackPane>
                    <children>
                        <Label id="header" text="OMDB Movie Search" />
                    </children>
                    <padding>
                        <Insets bottom="50.0" />
                    </padding>
                </StackPane>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Enter Artist" />
                        <TextField fx:id="textField" />
                  <Button mnemonicParsing="false" onAction="#getAlbums" text="Search" />

                    </children>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <ListView fx:id="musicListView" prefHeight="354.0" prefWidth="676.0" />
                        <ImageView fx:id="imageView" fitHeight="355.0" fitWidth="277.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </HBox>
                <Label fx:id="rowsReturnedLabel" text="Rows Returned: " />
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
